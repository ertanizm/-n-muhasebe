<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mutabık - Müşteriler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    <link href="/css/cekler.css" rel="stylesheet">
</head>
<body>
    <%- include('../sidebar') %>

    <div class="main-content">
        <div class="product-container">
            <div class="page-header">
                <h1 class="page-title">Çekler</h1>
                <div class="action-buttons">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCekModal">
                        <i class="fas fa-plus"></i>
                        <span>Yeni Çek</span>
                    </button>
                    <a href="/ceklistesi/export" class="btn btn-info" style="color: white">
                        <i class="fas fa-file-export"></i>
                        <span>Dışa Aktar</span>
                    </a>
                </div>
            </div>
    
            <div class="search-area">
                <input type="text" class="form-control search-box" placeholder="Çek Ara...">
            </div>
    
            <div class="products-table">
                <table class="table table-striped mt-4">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Çek No</th>
                            <th>Tarih</th>
                            <th>Vade</th>
                            <th>Tutar</th>
                            <th>Cari</th>
                            <th>İşlem Tipi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                          <td>1</td>
                          <td>CK-2025001</td>
                          <td>2025-08-01</td>
                          <td>2025-08-30</td>
                          <td>12.500,00 ₺</td>
                          <td>ABC İnşaat Ltd. Şti.</td>
                          <td>Giriş</td>
                          <td>Bekliyor</td>
                          <td>
                            <button class="btn btn-sm btn-warning me-1 edit-btn"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash-alt"></i></button>
                          </td>
                        </tr>
                        <tr>
                          <td>2</td>
                          <td>CK-2025002</td>
                          <td>2025-07-25</td>
                          <td>2025-09-01</td>
                          <td>8.400,00 ₺</td>
                          <td>XYZ Gıda A.Ş.</td>
                          <td>Çıkış</td>
                          <td>Tahsil Edildi</td>
                          <td>
                            <button class="btn btn-sm btn-warning me-1 edit-btn"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash-alt"></i></button>
                          </td>
                        </tr>
                        <tr>
                          <td>3</td>
                          <td>CK-2025003</td>
                          <td>2025-06-15</td>
                          <td>2025-08-15</td>
                          <td>4.750,00 ₺</td>
                          <td>Mert Mobilya</td>
                          <td>Giriş</td>
                          <td>Ciro Edildi</td>
                          <td>
                            <button class="btn btn-sm btn-warning me-1 edit-btn"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash-alt"></i></button>
                          </td>
                        </tr>
                      </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Modal: Yeni Çek Ekle -->
    <div class="modal fade" id="addCekModal" tabindex="-1" aria-labelledby="addCekModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCekModalLabel">Yeni Çek</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <form id="cekForm">
                        <input type="hidden" id="cek_id" name="id">
    
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="cekNo" class="form-label">Çek No</label>
                                <input type="text" class="form-control" id="cekNo" name="cekNo" required>
                            </div>
                            <div class="col-md-4">
                                <label for="tarih" class="form-label">Tarih</label>
                                <input type="date" class="form-control" id="tarih" name="tarih" required>
                            </div>
                            <div class="col-md-4">
                                <label for="vade" class="form-label">Vade</label>
                                <input type="date" class="form-control" id="vade" name="vade" required>
                            </div>
                            <div class="col-md-6">
                                <label for="tutar" class="form-label">Tutar (₺)</label>
                                <input type="number" step="0.01" class="form-control" id="tutar" name="tutar" required>
                            </div>
                            <div class="col-md-6">
                                <label for="cari" class="form-label">Cari</label>
                                <input type="text" class="form-control" id="cari" name="cari" required>
                            </div>
                            <div class="col-md-6">
                                <label for="tip" class="form-label">İşlem Tipi</label>
                                <select id="tip" name="tip" class="form-select">
                                    <option value="giris">Giriş</option>
                                    <option value="cikis">Çıkış</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="durum" class="form-label">Durum</label>
                                <select id="durum" name="durum" class="form-select">
                                    <option value="Bekliyor">Bekliyor</option>
                                    <option value="Tahsil Edildi">Tahsil Edildi</option>
                                    <option value="Ciro Edildi">Ciro Edildi</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary" id="saveCek">Kaydet</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
  
</body>
</html>
