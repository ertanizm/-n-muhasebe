<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mutabık - Vergi Kartları</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    <link href="/css/musteriler.css" rel="stylesheet">
</head>
<body>
    <%- include('../sidebar') %>

    <div class="main-content">
        <div class="product-container">
            <div class="page-header">
                <h1 class="page-title">Vergi Kartları</h1>
                <div class="action-buttons">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addVergiModal">
                        <i class="fas fa-plus"></i>
                        <span>Yeni Vergi</span>
                    </button>
                </div>
            </div>

            <div class="search-area">
                <input type="text" class="form-control search-box" placeholder="Vergi Ara...">
            </div>

            <div class="products-table mt-4">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Vergi Kodu</th>
                            <th>1. Vergi Oranı (%)</th>
                            <th>2. Vergi Oranı (%)</th>
                            <th>3. Vergi Oranı (%)</th>
                            <th>4. Vergi Oranı (%)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% vergi.forEach(function(v) { %>
                        <tr>
                            <td><%= v.id %></td>
                            <td><%= v.vergikodu %></td>
                            <td><%= v.birincivergiorani !== null && v.birincivergiorani !== undefined ? v.birincivergiorani : '-' %></td>
                            <td><%= v.ikincivergiorani !== null && v.ikincivergiorani !== undefined ? v.ikincivergiorani : '-' %></td>
                            <td><%= v.ucuncuvergiorani !== null && v.ucuncuvergiorani !== undefined ? v.ucuncuvergiorani : '-' %></td>
                            <td><%= v.dorduncuvergiorani !== null && v.dorduncuvergiorani !== undefined ? v.dorduncuvergiorani : '-' %></td>
                            <td>
                                <button class="btn btn-sm btn-warning me-1 edit-btn"
                                    data-id="<%= v.id %>"
                                    data-vergikodu="<%= v.vergikodu %>"
                                    data-birincivergiorani="<%= v.birincivergiorani %>"
                                    data-ikincivergiorani="<%= v.ikincivergiorani %>"
                                    data-ucuncuvergiorani="<%= v.ucuncuvergiorani %>"
                                    data-dorduncuvergiorani="<%= v.dorduncuvergiorani %>">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger delete-btn" data-id="<%= v.id %>">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addVergiModal" tabindex="-1" aria-labelledby="addVergiModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addVergiModalLabel">Yeni Vergi Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <form id="vergiForm">
                        <input type="hidden" id="id" name="id">
                        <div class="mb-3">
                            <label for="vergikodu" class="form-label">Vergi Kodu</label>
                            <input type="text" class="form-control" id="vergikodu" name="vergikodu" required>
                        </div>
                        <div class="mb-3">
                            <label for="birincivergiorani" class="form-label">1. Vergi Oranı (%)</label>
                            <input type="number" step="1" class="form-control" id="birincivergiorani" name="birincivergiorani">
                        </div>
                        <div class="mb-3">
                            <label for="ikincivergiorani" class="form-label">2. Vergi Oranı (%)</label>
                            <input type="number" step="1" class="form-control" id="ikincivergiorani" name="ikincivergiorani">
                        </div>
                        <div class="mb-3">
                            <label for="ucuncuvergiorani" class="form-label">3. Vergi Oranı (%)</label>
                            <input type="number" step="1" class="form-control" id="ucuncuvergiorani" name="ucuncuvergiorani">
                        </div>
                        <div class="mb-3">
                            <label for="dorduncuvergiorani" class="form-label">4. Vergi Oranı (%)</label>
                            <input type="number" step="1" class="form-control" id="dorduncuvergiorani" name="dorduncuvergiorani">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-primary" id="saveVergi">Kaydet</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script>
        document.getElementById('saveVergi').addEventListener('click', async function() {
            const form = document.getElementById('vergiForm');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            // Kullanıcı bilgilerini ekle
            data.guncelleyenkullanicikayitno = '<%= user.id %>';
            data.kaydedenkullanicikayitno = '<%= user.id %>';
            
            try {
                const response = await fetch('/stok/vergi', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert('Kayıt sırasında bir hata oluştu: ' + result.message);
                }
            } catch (error) {
                alert('İşlem sırasında bir hata oluştu');
            }
        });

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                if (!confirm('Vergi kartını silmek istediğinize emin misiniz?')) return;
                
                const id = btn.dataset.id;
                const response = await fetch(`/stok/vergi/${id}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const result = await response.json();
                if (result.success) {
                    btn.closest('tr').remove();
                    alert('Vergi kartı başarıyla silindi.');
                } else {
                    alert('Silme işlemi başarısız: ' + result.message);
                }
            });
        });

        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const modal = new bootstrap.Modal(document.getElementById('addVergiModal'));
                const form = document.getElementById('vergiForm');
                form.id.value = btn.dataset.id;
                form.vergikodu.value = btn.dataset.vergikodu;
                form.birincivergiorani.value = btn.dataset.birincivergiorani;
                form.ikincivergiorani.value = btn.dataset.ikincivergiorani;
                form.ucuncuvergiorani.value = btn.dataset.ucuncuvergiorani;
                form.dorduncuvergiorani.value = btn.dataset.dorduncuvergiorani;
                document.getElementById('addVergiModalLabel').textContent = 'Vergi Düzenle';
                modal.show();
            });
        });
    </script>
</body>
</html>
