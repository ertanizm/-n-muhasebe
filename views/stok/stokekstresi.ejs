    <script src="/js/script.js"></script>
    <script>
        // Filtre işlemleri
        document.querySelectorAll('.form-control, .form-select').forEach(input => {
            input.addEventListener('change', function() {
                // Filtre değişikliklerini işle
                console.log('Filtre değişti:', this.name, this.value);
            });
        });

        // Arama butonu
        document.querySelector('.btn-primary').addEventListener('click', function() {
            // Arama işlemini başlat
            console.log('Arama başlatıldı');
        });

        // Temizle butonu
        document.querySelector('.btn-outline-secondary').addEventListener('click', function() {
            // Formu temizle
            document.querySelectorAll('.form-control, .form-select').forEach(input => {
                input.value = '';
            });
        });

        // Export butonları
        document.querySelectorAll('.btn-export').forEach(btn => {
            btn.addEventListener('click', function() {
                const action = this.textContent.trim();
                console.log('Export işlemi:', action);
                alert(`${action} işlemi başlatıldı`);
            });
        });

        // Tablo satır tıklama
        document.querySelectorAll('.table tbody tr').forEach(row => {
            row.addEventListener('click', function() {
                // Satır detaylarını göster
                console.log('Satır tıklandı:', this);
            });
        });
    </script>
</body>
</html> 