        function setDiscount(type, value){
            globalDiscount = { type, value: Math.max(0, value) };
            // √∂nce t√ºm satƒ±rlarƒ±n indirimlerini sƒ±fƒ±rla
            cart.forEach(it=>{ it.discountRate = 0; it.discountAmount = 0; });
            // her satƒ±rƒ±n y√ºzdeli ara toplamƒ±nƒ± bul
            const bases = cart.map(it=>{
                const base = Number(it.quantity||0) * Number(it.price||0);
                return base + base * (Number(it.percent||0)/100);
            });
            const subtotal = bases.reduce((s,v)=>s+v,0);
            if (subtotal <= 0) { updateCartDisplay(); return; }
            if (type === 'percent'){
                cart.forEach((it,idx)=>{
                    it.discountRate = value;
                    it.discountAmount = Number((bases[idx] * value / 100).toFixed(2));
                });
            } else if (type === 'amount'){
                let remaining = value;
                cart.forEach((it,idx)=>{
                    let part = Number((value * (bases[idx]/subtotal)).toFixed(2));
                    // son satƒ±ra kalanƒ± bƒ±rak
                    if (idx === cart.length - 1) part = Number(remaining.toFixed(2));
                    remaining = Number((remaining - part).toFixed(2));
                    it.discountAmount = Math.min(part, bases[idx]);
                    it.discountRate = 0;
                });
            }
            updateCartDisplay();
            // √∂deme modalƒ±ndaki √∂denecek tutarƒ± g√ºncelle
            const total = calculateTotal();
            const atp = document.getElementById('amountToPay');
            if (atp) atp.value = total.toFixed(2);
        }

