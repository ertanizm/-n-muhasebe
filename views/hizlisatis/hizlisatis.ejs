                    </div>
                `,
                focusConfirm: false,
                preConfirm: () => {
                    const type = (document.getElementById('discAmount').checked ? 'amount' : 'percent');
                    const value = parseFloat(document.getElementById('discValue').value)||0;
                    return { type, value };
