        // ƒ∞ndirim i≈ülemleri
        function openDiscountDialog(){
            Swal.fire({
                title: 'ƒ∞ndirim',
                html: `
                    <div style="text-align:left">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="discType" id="discPercent" value="percent" checked>
