        function toggleSaleDetails(id, btn){
            const box = document.getElementById(`sale-${id}`);
            const open = box.classList.contains('open');
            if (!open){
                if (!box.dataset.loaded){
                    fetch(`/api/irsaliye/detaylar?id=${id}`).then(r=>r.json()).then(j=>{
                        if(!j.success) throw new Error();
                        box.innerHTML = renderDetailsTable(j.data||[]);
                        box.dataset.loaded = '1';
                    }).catch(()=>{ box.innerHTML='<div class="text-danger p-2">Detay y√ºklenemedi</div>'; });
                }
                box.classList.add('open');
                btn.innerHTML = "<i class='fa fa-minus'></i>";
            } else {
                box.classList.remove('open');
                btn.innerHTML = "<i class='fa fa-plus'></i>";
            }
        }

